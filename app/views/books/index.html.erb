<p id="notice"></p>
<%= notice %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


 <% @books.each do |book| %>

    <thead>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>

        <% end %>
    </tbody>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
 <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message + "error" %></li>
      <% end %>
    </ul>

 <% end %>
<%= form_for(@book) do |f| %>

<div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
    </div>
    <%= f.label :Body %>
    <%= f.text_area :body %>

    <div><%= f.submit 'Create Book' %></div>

<% end %>


